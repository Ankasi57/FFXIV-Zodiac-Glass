<Window x:Class="ZodiacGlass.OverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ZG="clr-namespace:ZodiacGlass"
        Title="OverlayWindow"
        ShowActivated="False"
        ShowInTaskbar="False" Focusable="False"
        Height="24" WindowStartupLocation="Manual" Left="5" Top="5"
        SizeToContent="Width"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        ResizeMode="NoResize">
    <Window.DataContext>
        <ZG:OverlayViewModel />
    </Window.DataContext>
    <StackPanel Orientation="Horizontal"
                Visibility="{Binding OverlayVisibility}"
                Height="24"
                MouseLeftButtonDown="OnMouseLeftButtonDown">
        <Image Height="24"
               MouseLeftButtonDown="OnImageMouseLeftButtonDown"
               MouseLeftButtonUp="OnImageMouseLeftButtonUp"
               Source="{Binding ClassSymbolUri}" />
        <TextBlock Foreground="#FFDED2B8"
                   Visibility="{Binding MainHandVisibility}"
                   Text="{Binding EquippedMainHandLightAmount}" FontWeight="SemiBold"
                   FontSize="16">
            <TextBlock.BitmapEffect>
                <OuterGlowBitmapEffect GlowColor="Red" GlowSize="50" Noise="5" Opacity="0.5" />
            </TextBlock.BitmapEffect>
        </TextBlock>
        <TextBlock Foreground="#FFDED2B8"
                   Visibility="{Binding MainHandAdditionVisibility}"
                   Text="{Binding MainHandAddition, StringFormat='(+{0})'}"
                   FontWeight="SemiBold"
                   FontSize="16">

            <TextBlock.BitmapEffect>
                <OuterGlowBitmapEffect GlowColor="Red"
                                       GlowSize="50"
                                       Noise="5"
                                       Opacity="0.5" />
            </TextBlock.BitmapEffect>
        </TextBlock>
        <TextBlock Foreground="#FFDED2B8"
                   Visibility="{Binding SeparatorVisibility}"
                   Text=" | "
                   FontWeight="SemiBold"
                   FontSize="16">
            <TextBlock.BitmapEffect>
                <OuterGlowBitmapEffect GlowColor="Red"
                                       GlowSize="50"
                                       Noise="5"
                                       Opacity="0.5" />
            </TextBlock.BitmapEffect>
        </TextBlock>
        <TextBlock Foreground="#FFDED2B8"
                   Visibility="{Binding OffHandVisibility}"
                   Text="{Binding EquippedOffHandLightAmount}"
                   FontWeight="SemiBold"
                   FontSize="16">

            <TextBlock.BitmapEffect>
                <OuterGlowBitmapEffect GlowColor="Red"
                                       GlowSize="50"
                                       Noise="5"
                                       Opacity="0.5" />
            </TextBlock.BitmapEffect>
        </TextBlock>
        <TextBlock Foreground="#FFDED2B8"
                   Visibility="{Binding OffHandAdditionVisibility}"
                   Text="{Binding OffHandAddition, StringFormat='(+{0})'}"
                   FontWeight="SemiBold"
                   FontSize="16">

            <TextBlock.BitmapEffect>
                <OuterGlowBitmapEffect GlowColor="Red"
                                       GlowSize="50"
                                       Noise="5"
                                       Opacity="0.5" />
            </TextBlock.BitmapEffect>
        </TextBlock>
    </StackPanel>
</Window>
